<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <div class="row">
      <% time = Time.new %>
      <% day_of_month = time.day %>
      <% month = time.month %>
      <% day_of_month = 3 %>
      <% month = 2 %>
      

      <h1> Internasjonale supper </h1>
      <hr>
      <% if month == 2 %>
        <% if day_of_month == 3 %>
          <a href="<%= image_path("Tirsdag.png") %>"><%= image_tag "http://i.imgur.com/2BIpw2Y.png", size: "1000x700", class: "img-responsive" %></a>
        <% elsif day_of_month == 4 %>
          <a href="<%= image_path("Onsdag.png") %>"><%= image_tag "http://i.imgur.com/O7Bvqgh.jpg", size: "1000x700", class: "img-responsive" %></a>
        <% elsif day_of_month == 5 %>
          <a href="<%= image_path("Torsdag.png") %>"><%= image_tag "http://i.imgur.com/mxjwZus.png", size: "1000x700", class: "img-responsive" %></a>
        <% elsif day_of_month == 6 %>
         <a href="<%= image_path("Fredag.png") %>"><%= image_tag "http://i.imgur.com/mVwKngk.jpg", size: "1000x700", class: "img-responsive" %></a>
        <% end %>
      <% elsif month < 3 %>
        <a href="<%= image_path("Mandag.png") %>"><%= image_tag "http://i.imgur.com/Vyiyaf2.jpg", size: "1000x700", class: "img-responsive" %></a>
      <% end %>
  
