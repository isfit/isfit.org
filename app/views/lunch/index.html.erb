          <div class="col-md-2">
            <a href="<%= image_path("Onsdag.png") %>"><%= image_tag "http://i.imgur.com/O7Bvqgh.jpg",  class: "img-responsive" %></a>
          </div>
          <div class="col-md-2">
            <a href="<%= image_path("Torsdag.png") %>"><%= image_tag "http://i.imgur.com/mxjwZus.png",  class: "img-responsive" %></a>
          </div>
          <div class="col-md-2">
