            <a href="<%= image_path("Internasjonal_lunsj_merinfo.png") %>"><%= image_tag "http://i.imgur.com/p7zvjyU.png", class: "img-responsive" %></a>
          </div>
          <div class="col-md-2">
            <a href="<%= image_path("Mandag.png") %>"><%= image_tag "http://i.imgur.com/Vyiyaf2.jpg", class: "img-responsive" %></a>
          </div>
          <div class="col-md-2">
            <a href="<%= image_path("Tirsdag.png") %>"><%= image_tag "http://i.imgur.com/2BIpw2Y.png",  class: "img-responsive" %></a>
